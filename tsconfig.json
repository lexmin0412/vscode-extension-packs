{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"resolveJsonModule": true,
		"typeRoots": ["./node_modules/@types"],
		"moduleResolution": "node"
	},
	"include": ["*"],
	"exclude": ["node_modules", "dist"]
}
